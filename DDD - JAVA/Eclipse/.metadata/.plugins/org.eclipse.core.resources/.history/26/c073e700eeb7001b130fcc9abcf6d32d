package challenge;

import java.text.SimpleDateFormat;
import java.util.Date;
import java.text.DateFormat;

public class Teste {
	static SimpleDateFormat sdf = new SimpleDateFormat("yyyyMMddHHmmssSSSS");
	static Date data = new Date();
	private static long randomId() {
	    String id = sdf.format(System.currentTimeMillis());
	    long numero = Long.valueOf(id).longValue();
	    return numero;
	}
	
		
	
	 
	
	public static void main(String[] args) {
		Usuario user1 = new Usuario(randomId(), "email@email.com", "123456", "João", "Da Silva",
				"31/03/2000", "masculino", "11 99999-4444", "Usuário Comum");
		Publicacao publicacao = new Publicacao(user1.getUserId(), randomId(), "17/05/2021", "relato", "Feliz", "Texto");
		Comentario coment = new Comentario(user1.getUserId(), publicacao.getPubId(), randomId(), "21/05/2021", "comentário");
		//Chat chat = new Chat(user1.getUserId(), randomId(), data, "Mensagem");
		

		System.out.println("*** USUÁRIO ***");
		System.out.println("Id do usuario:"+user1.getUserId());
		System.out.println("email: "+user1.getEmail());
		System.out.println("senha: "+user1.getSenha());
		System.out.println("Nome: "+user1.getNome());
		System.out.println("Sobrenome: "+user1.getSobrenome());
		System.out.println("Nascimento: "+user1.getDtNascimento());
		System.out.println("Gênero: "+user1.getGenero());
		System.out.println("Telefone: "+user1.getTelefone());
		System.out.println("Tipo de usuário: "+user1.getTipoUsuario()+"\n");
	
		System.out.println("*** PUBLICAÇÃO ***");
		System.out.println("Id do usuario:"+publicacao.getUserId());
		System.out.println("Id da publicação: "+publicacao.getPubId());
		System.out.println("Data da publicação: "+publicacao.getData());
		System.out.println("Tema da publicação: "+publicacao.getTema());
		System.out.println("Status do usuário: "+publicacao.getStatus());
		System.out.println("Conteúdo da publicação: "+publicacao.getConteudo()+"\n");
		
		System.out.println("*** COMENTARIO ***");
		System.out.println("Id do usuário: "+coment.getUserId());
		System.out.println("Id da publicação: "+coment.getPubId());
		System.out.println("Id do comentario: "+coment.getComentId());
		System.out.println("Data do comentario: "+coment.getData());
		System.out.println("Conteudo do comentario: "+coment.getConteudo()+"\n");
		
		/*System.out.println("*** CHAT ***");
		System.out.println("Id do usuario: "+chat.getUserId());
		System.out.println("Id do chat: "+chat.getChatId());
		System.out.println("Conteudo da mensagem: "+chat.getMsg());
		*/
		System.out.println(data.getDay());
		
	}	
}
