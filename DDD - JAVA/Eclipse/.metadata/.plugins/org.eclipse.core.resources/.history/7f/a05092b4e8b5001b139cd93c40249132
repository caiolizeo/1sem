package checkpoint2;

import java.util.Scanner;

public class Metodos {

	Scanner input = new Scanner(System.in);

	//Media Ponderada
	public String calculaMediaPonderada(double nota1, double nota2) {
		
		double media;
		String result = null;
		
		
		media = (nota1*0.4)+(nota2*0.6);
		System.out.println(media);
		
	
		System.out.printf("A média é: %.2f \n",media);
		if(media >=6) {
			result ="Aprovado";
		} else if(media >= 5 && media < 6) {
			result = "Prova Substitutiva";
		} else if(media < 5) {
			result = "Reprovado";			
		}
		return result;
	}
		
	//Media Aritimetica
	public String calculaAritimetica(double nota1, double nota2, double nota3) {
			double media;
			String result = null;
			double soma = nota1 + nota2 + nota3;
			media = soma / 3;
			
			System.out.printf("A média é: %.2f \n",media);
			if(media >=6) {
				result = "Aprovado";
			} else if(media >= 5 && media < 6) {
				result = "Prova Substitutiva";
			} else if(media < 5) {
				result = "Reprovado";			
			}
			return result;
		}
	
	
	public double opBasicas(int opcao, double num1, double num2) {
		double resultado = 0;
		
		if(opcao == 1) {
			resultado = num1 + num2;
		} else if(opcao == 2) {
			resultado = num1 - num2;
		}else if(opcao == 3) {
			resultado = num1 * num2;
		}else if(opcao == 4) {
			resultado = num1 / num2;
		}
		return resultado;
	}
	
	
	public double areaCirc(double raio) {					
		double r = Math.PI * raio * raio;			
		return r;		
	}
	
	public void velocidadeMedia() {
		
        System.out.println("Digite a distância em Km:");
        double dist = input.nextDouble();

        System.out.println("Digite o tempo de duração da viagem em horas:");
        double tempo = input.nextDouble();
 
        System.out.printf("A velocidade média da viagem é de %.2f Km/h.", dist/tempo);
    }

	
}


