package checkpoint2;

import java.util.Scanner;

public class TesteCP2 {

	public static void main(String[] args) {

		Metodos metodos = new Metodos();
		Scanner input = new Scanner(System.in);
		int resposta;
		
		
		System.out.printf("escolha uma opção: ");
		resposta = input.nextInt();
		
		
		if(resposta == 1 || resposta == 2 || resposta == 3 || resposta == 4) {
			System.out.printf("Digite o primeiro número \n---> ");
			double num1 = input.nextDouble();
			System.out.printf("Digite o segundo número \n---> ");
			double num2 = input.nextDouble();
			System.out.printf("O resultado da operação é: %.2f",metodos.calculaOpBasica(resposta, num1, num2));
		} else if(resposta == 5) {
			System.out.printf("Digite a primeira nota \n---> ");
			double nota1 = input.nextDouble();
			System.out.printf("Digite a segunda nota \n---> ");
			double nota2 = input.nextDouble();
			System.out.println(metodos.calculaMediaPonderada(nota1, nota2));
			
		} else if(resposta == 6) {
			System.out.printf("Digite a primeira nota \n---> ");
			double nota1 = input.nextDouble();
			System.out.printf("Digite a segunda nota \n---> ");
			double nota2 = input.nextDouble();
			System.out.printf("Digite a terceira nota \n---> ");
			double nota3 = input.nextDouble();
			System.out.println(metodos.calculaAritimetica(nota1, nota2, nota3));
		} else if(resposta == 7) {
			System.out.printf("Digite valor do raio \n---> ");
			double raio = input.nextInt();
			System.out.printf("A área do círculo é: %.2f", metodos.calculaAreaCirc(raio));
		} else if(resposta == 8) {
		    System.out.printf("Digite a distância em Km \n--->");
		    double dist = input.nextDouble();
		    System.out.printf("Digite o tempo de duração da viagem em horas \n--->");
		    double tempo = input.nextDouble();
		    System.out.printf("A velocidade média da viagem é de %.2f Km/h.", metodos.calculaVelocidadeMedia(dist, tempo));
		}
		
		
		
		/*
